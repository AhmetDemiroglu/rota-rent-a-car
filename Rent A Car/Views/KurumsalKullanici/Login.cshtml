@model KurumsalLoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout";
}
        <div class="d-flex justify-content-center align-items-center">
            <form asp-action="Login" asp-controller="KurumsalKullanici" model="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <img class="mt-5" src="/img/Logo.png" alt="" width="275" height="90">
                <!-- Sekmeler -->
                <ul class="nav nav-tabs" style="width: 100%;">
                    <li class="nav-item" style="width: 50%;">
                        <a class="nav-link" style="color: #fff; background-color: #e9ecef; display: flex; justify-content: center; align-items: center; text-align: center; padding: 10px;" asp-controller="BireyselKullanici" asp-action="Login">Bireysel</a>
                    </li>
                    <li class="nav-item" style="width: 50%;">
                        <a class="nav-link active" style="color: #fff; background-color: #0056b3; display: flex; justify-content: center; align-items: center; text-align: center; padding: 10px;" asp-controller="KurumsalKullanici" asp-action="Login">Kurumsal</a>
                    </li>
                </ul>
                <!-- Sekme içeriği -->
                <div class="form-floating">
                    <input type="email" class="form-control" asp-for="FirmaEposta" placeholder="name@example.com">
                    <label asp-for="FirmaEposta">Eposta</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" asp-for="FirmaSifre" placeholder="Password">
                    <label asp-for="FirmaSifre">Şifre</label>
                </div>
                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Beni Hatırla
                    </label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
                <p class="mt-3">Üye değilseniz kayıt olmak için <a asp-controller="KurumsalKullanici" asp-action="Register" style="cursor:pointer">tıklayın.</a></p>
            </form>
        </div>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/Home.Index.js"></script>