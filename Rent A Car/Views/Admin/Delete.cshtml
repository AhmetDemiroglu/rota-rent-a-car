@model BireyselKullaniciViewModel

@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card kullanici-sil-card">
                <div class="card-header kullanici-sil-card-header">
                    Hesabı Silmek Üzeresiniz
                </div>
                <div class="card-body">
                    <p class="card-text">Bu kullanıcıyı silmek istediğinize emin misiniz? İşlem geri alınamaz.</p>
                    <ul class="list-unstyled">
                        <li><strong>Ad Soyad:</strong> @Model.Ad @Model.Soyad</li>
                        <li><strong>Eposta:</strong> @Model.Eposta</li>
                        <li><strong>Telefon:</strong> @Model.Telefon</li>
                    </ul>

                    <div>
                        <form asp-action="Delete" method="post" style="display: inline-block; margin-right: 10px;">
                            <input type="hidden" asp-for="BireyselKullaniciId" />
                            <button type="submit" class="btn btn-danger">Evet</button>
                        </form>
                        <a asp-action="UserIndex" class="btn btn-success" style="display: inline-block;">Hayır</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/admin.js"></script>
