        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/Home.Index.js"></script>
<script>
    $(document).ready(function () {
        function roundToNearest(minutes) {
            const ms = 1000 * 60 * minutes;
            const now = new Date();
            const roundedDate = new Date(Math.ceil(now.getTime() / ms) * ms);
            roundedDate.setMinutes(roundedDate.getMinutes() - roundedDate.getTimezoneOffset());
            return roundedDate.toISOString().slice(0, 16);
        }

        function setInitialValues() {
            const now = new Date();
            const teslimTarih = new Date(Math.ceil(now.getTime() / (1000 * 60 * 30)) * (1000 * 60 * 30));
            const iadeTarih = new Date(teslimTarih.getTime() + (1000 * 60 * 60 * 24));
            teslimTarih.setMinutes(teslimTarih.getMinutes() - teslimTarih.getTimezoneOffset());
            iadeTarih.setMinutes(iadeTarih.getMinutes() - iadeTarih.getTimezoneOffset());

            $('#TeslimTarih').val(teslimTarih.toISOString().slice(0, 16));
            $('#IadeTarih').val(iadeTarih.toISOString().slice(0, 16));
        }

        // Set initial values
        setInitialValues();

        // Save dates to local storage when they change
        $('#TeslimTarih, #IadeTarih').change(function () {
            var teslimTarihi = $('#TeslimTarih').val();
            var iadeTarihi = $('#IadeTarih').val();
            localStorage.setItem('teslimTarihi', teslimTarihi);
            localStorage.setItem('iadeTarihi', iadeTarihi);
        });

        $('#TeslimYeriId').change(function () {
            var teslimYeriId = $(this).val();
            var teslimTarihi = $('#TeslimTarih').val();
            var iadeTarihi = $('#IadeTarih').val();
            if (teslimTarihi && iadeTarihi && teslimYeriId) {
                $.ajax({
                    url: '@Url.Action("GetAvailableCars", "Rezervasyon")',
                    type: 'GET',
                    data: { teslimTarihi: teslimTarihi, iadeTarihi: iadeTarihi, teslimYeriId: teslimYeriId },
                    success: function (data) {
                        $('#AracId').empty().append('<option value="">Lütfen bir araç seçiniz</option>');
                        $.each(data, function (i, item) {
                            $('#AracId').append($('<option>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Bir hata oluştu: " + error);
                        $('#AracId').empty().append('<option value="">Araç yüklenemedi</option>');
                    }
                });
            }
        });

        $('#TeslimTarih, #IadeTarih').change(function () {
            var teslimYeriId = $('#TeslimYeriId').val();
            var teslimTarihi = $('#TeslimTarih').val();
            var iadeTarihi = $('#IadeTarih').val();
            if (teslimTarihi && iadeTarihi && teslimYeriId) {
                $.ajax({
                    url: '@Url.Action("GetAvailableCars", "Rezervasyon")',
                    type: 'GET',
                    data: { teslimTarihi: teslimTarihi, iadeTarihi: iadeTarihi, teslimYeriId: teslimYeriId },
                    success: function (data) {
                        $('#AracId').empty().append('<option value="">Lütfen bir araç seçiniz</option>');
                        $.each(data, function (i, item) {
                            $('#AracId').append($('<option>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Bir hata oluştu: " + error);
                        $('#AracId').empty().append('<option value="">Araç yüklenemedi</option>');
                    }
                });
            }
        });

        $('.box').on('click', function () {
            let target = $(this).data('target');
            $('#carouselExampleIndicators').carousel(target);
        });
    });
</script>
