@model RezervasyonAramaViewModel

@{
    ViewData["Title"] = "Rota Rent A Car ®";
    Layout = "_Layout";
}

<div class="container-fluid p-0">
    <!-- SEARCH FORM -->
    <div class="search-container">
        <form class="mt-5 mb-5" asp-controller="Home" asp-action="Search" method="post" novalidate>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="TeslimAlmaOfisi">Teslim Alma Ofisi</label>
                    <select asp-for="TeslimYeriId" asp-items="@Model.TeslimYeriSecenekleri" class="form-control"></select>
                </div>
                <div class="form-group col-md-6">
                    <label for="IadeEtmeOfisi">İade Etme Ofisi</label>
                    <select asp-for="IadeYeriId" asp-items="@Model.IadeYeriSecenekleri" class="form-control"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="TeslimTarih">Alış Tarihi/Saati</label>
                    <input asp-for="TeslimTarih" id="TeslimTarih" type="datetime-local" class="form-control" step="1800" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IadeTarih">İade Tarihi/Saati</label>
                    <input asp-for="IadeTarih" id="IadeTarih" type="datetime-local" class="form-control" step="1800" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5 offset-md-3">
                    <label for="Kategori">Kategori</label>
                    <select asp-for="KategoriId" asp-items="@Model.KategoriSecenekleri" class="form-control"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary">Ara</button>
                </div>
            </div>
        </form>
    </div>

    <!-- SLIDESHOW / CAROUSEL -->
