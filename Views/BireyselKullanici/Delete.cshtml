@model BireyselKullaniciViewModel
@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header bg-warning">
                    Hesabınızı Silmek Üzeresiniz
                </div>
                <div class="card-body">
                    <p class="card-text">Hesabınızı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                    <ul class="list-unstyled">
                        <li><strong>Ad Soyad:</strong> @Model.AdSoyad</li>
                        <li><strong>Eposta:</strong> @Model.Eposta</li>
                        <li><strong>Telefon:</strong> @Model.Telefon</li>
                    </ul>

                        <div>
                            <form asp-controller="BireyselKullanici" asp-action="Delete" asp-route-id="@Model.BireyselKullaniciId" method="post" style="display: inline-block; margin-right: 10px;">
                                <button type="submit" class="btn btn-danger">Evet</button>
                            </form>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-success" style="display: inline-block;">Hayır</a>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/Home.Index.js"></script>